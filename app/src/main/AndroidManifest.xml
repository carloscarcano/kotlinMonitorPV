<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cc.monitor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_splash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Monitor">
        <activity
            android:name=".DetalleSensorActivity"
            android:exported="false"
            android:label="Información del Sensor"/>
        <activity
            android:name=".PrincipalActivity"
            android:exported="false"
            android:label="Sensores Registrados" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="Inicio de Sesión" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>